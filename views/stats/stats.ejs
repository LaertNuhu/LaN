// console.log(zeit);
function zeitInteval(begin,end) {
  var label = []
  for (var i = 0; i < zeit.length; i++) {
    if (zeit[i] >= begin && zeit[i] < end) {
        label.push(zeit[i])
    }else {
      // console.log(zeit[i]);
      continue
    }
  }
  return label
}

